<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.ModeSelectController"
           style="-fx-background-color: black;">
    <VBox alignment="CENTER" spacing="20">
        <Label text="SELECT GAME MODE"
               style="-fx-font-size: 36; -fx-text-fill: white;" />

        <Button text="Classic" fx:id="classicBtn" style="-fx-font-size: 24; -fx-padding: 10 40;"/>
        <Button text="Time Limit" fx:id="timeBtn" style="-fx-font-size: 24; -fx-padding: 10 40;"/>
        <Button text="All Same Block" fx:id="sameBtn" style="-fx-font-size: 24; -fx-padding: 10 40;"/>
        <Button text="Back" fx:id="backBtn" style="-fx-font-size: 24; -fx-padding: 10 40;"/>
    </VBox>
</StackPane>