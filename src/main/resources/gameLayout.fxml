<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.Group?>

<StackPane fx:controller="com.comp2042.GuiController"
           xmlns:fx="http://javafx.com/fxml"
           styleClass="root">

    <HBox alignment="CENTER" spacing="40">
        <!--TETRIS GAMEPLAY AREA-->
        <AnchorPane fx:id="Container"
                    prefWidth="220"
                    prefHeight="490"
                    minWidth="220"
                    minHeight="490"
                    maxWidth="220"
                    maxHeight="490"
                    styleClass="GContainer">

            <GridPane fx:id="brickPanel" vgap="1" hgap="1" />
            <BorderPane styleClass="gameBoard" fx:id="gameBoard"
                        AnchorPane.bottomAnchor="0"
                        AnchorPane.leftAnchor="0"
                        AnchorPane.rightAnchor="0"
                        AnchorPane.topAnchor="0" >
                <center>
                    <GridPane fx:id="gamePanel" hgap="1" vgap="1"
                              AnchorPane.bottomAnchor="0"
                              AnchorPane.leftAnchor="0"
                              AnchorPane.rightAnchor="0"
                              AnchorPane.topAnchor="0"
                              alignment="CENTER" />
                </center>
            </BorderPane>

            <VBox fx:id="SideP" alignment="TOP_LEFT" spacing="0">
                <!-- NEXT section -->
                <AnchorPane prefWidth="150" prefHeight="150">
                    <Label text="NEXT" styleClass="nextBrickLabel"
                           layoutX="235" layoutY="-3"/>
                    <AnchorPane fx:id="nextBrickContainer"
                                prefWidth="100" prefHeight="120"
                                styleClass="NBrickContainer"
                                layoutX="225" layoutY="10"/>
                </AnchorPane>

                <!-- SCORE section -->
                <AnchorPane prefWidth="150" prefHeight="100" >
                    <Label text="SCORE" styleClass="NTextLabel"
                           layoutX="260" layoutY="0"/>
                    <Label fx:id="scoreLabel" text="0" styleClass="NTextLabel"
                           layoutX="275" layoutY="30"/>
                    <AnchorPane fx:id="ScoreContainer"
                                prefWidth="100" prefHeight="120"
                                styleClass="scoreContainer"
                                layoutX="225" layoutY="-15"/>
                </AnchorPane>

                <AnchorPane prefWidth="150" prefHeight="50">
                    <Label text="TIMER" styleClass="NTextLabel" layoutX="230" layoutY="-18"/>
                    <Label fx:id="timerLabel" text="0" styleClass="NTextLabel" layoutX="247" layoutY="10"/>
                </AnchorPane>


                <!--CONTROLS PANEL-->
                <AnchorPane prefWidth="150" prefHeight="150">
                    <Label text="CONTROLS" styleClass="HTextLabel"
                           layoutX="-120" layoutY="-230"/>
                    <Label text="Restart   - N" styleClass="STextLabel"
                           layoutX="-120" layoutY="-190"/>
                    <Label text="Rotate    - W / ↑" styleClass="STextLabel"
                           layoutX="-120" layoutY="-165"/>
                    <Label text="Move Left - A / ←" styleClass="STextLabel"
                           layoutX="-120" layoutY="-140"/>
                    <Label text="Move Right- D / →" styleClass="STextLabel"
                           layoutX="-120" layoutY="-115"/>
                    <Label text="Move Down - S / ↓" styleClass="STextLabel"
                           layoutX="-120" layoutY="-90"/>
                    <Label text="DROP      - SPACE" styleClass="STextLabel"
                           layoutX="-120" layoutY="-65"/>
                    <Label text="MAIN MENU - ESC" styleClass="STextLabel"
                           layoutX="-120" layoutY="-40"/>
                    <Label text="PAUSE     - TAB" styleClass="STextLabel"
                           layoutX="-120" layoutY="-15"/>
                    <AnchorPane fx:id="ControlContainer"
                                styleClass="controlContainer"
                                layoutX="-125" layoutY="-240"/>
                </AnchorPane>
            </VBox>
        </AnchorPane>
    </HBox>

    <Rectangle fx:id="blackScreen" fill="black" opacity="0" visible="false"
               width="6000" height="6000"/>
    <GameOverPanel fx:id="gameOverPanel" visible="false"/>
    <Group fx:id="groupNotification" layoutX="7" layoutY="203"/>
    <Group fx:id="TimeBonus" layoutX="7" layoutY="150" styleClass="bonusStyle2">
        <Label fx:id="bonusTimeLabel"/>
    </Group>


    <AnchorPane fx:id="pauseOverlay"
                visible="false"
                style="-fx-background-color: rgba(0,0,0,0.6);">

        <Label text="PAUSED"
               styleClass="pauseStyle1"
               AnchorPane.topAnchor="150"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               alignment="CENTER"/>

        <Label text="Press TAB to unpause"
               styleClass="pauseStyle2"
               AnchorPane.topAnchor="200"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               alignment="CENTER"/>
    </AnchorPane>

    <AnchorPane fx:id="ghostPane"
                prefWidth="220"
                prefHeight="490"
                minWidth="220"
                minHeight="490"
                maxWidth="220"
                maxHeight="490"
                style="-fx-background-color: transparent;" />


    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>

