<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.LeaderBoardController"
           style="-fx-background-color: black;">

    <VBox alignment="CENTER" spacing="20">

        <Label text="LEADERBOARD"
               style="-fx-font-size: 48; -fx-text-fill: white;" />

        <!-- Mode selection buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="CLASSIC" onAction="#showClassic"
                    style="-fx-background-color:#333;-fx-text-fill:white; " />
            <Button text="TIMER" onAction="#showTimer"
                    style="-fx-background-color:#333;-fx-text-fill:white;" />
            <Button text="ALL SAME BLOCK" onAction="#showAllSame"
                    style="-fx-background-color:#333;-fx-text-fill:white;" />
        </HBox>

        <VBox alignment="CENTER">
            <VBox fx:id="leaderboardContainer"
                  alignment="CENTER"
                  spacing="10"
                  style="-fx-background-color: Black;
                  -fx-max-width: 2000px; -fx-max-height: 1000px;
                  -fx-padding: 10;
                  -fx-background-radius: 10;"/>
        </VBox>

        <Button text="Back" prefWidth="120" onAction="#backToMenu"
                style="-fx-background-color: #333; -fx-text-fill: white;" />

    </VBox>
</StackPane>
