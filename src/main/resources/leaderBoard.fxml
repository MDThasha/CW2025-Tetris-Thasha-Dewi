<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.LeaderBoardController"
           style="-fx-background-color: black;">

    <VBox alignment="CENTER" spacing="20">

        <Label text="LEADERBOARD"
               style="-fx-font-size: 48; -fx-text-fill: white;" />

        <VBox fx:id="leaderboardContainer"
              alignment="CENTER" spacing="10"/>

        <Button text="Back" prefWidth="120" onAction="#backToMenu"
                style="-fx-background-color: #333; -fx-text-fill: white;" />

    </VBox>
</StackPane>
